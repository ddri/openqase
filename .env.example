# ===========================================
# OpenQase Environment Configuration
# ===========================================
# Copy this file to .env.local and fill in your values

# Supabase (required)
# Get these from: Supabase Dashboard → Settings → API
NEXT_PUBLIC_SUPABASE_URL=http://127.0.0.1:54321
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Site URL (optional - defaults to https://openqase.com)
# Used for SEO canonical URLs and email links
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Development mode (optional)
# Set to true to bypass auth checks on localhost
NEXT_PUBLIC_DEV_MODE=false

# Newsletter - Beehiiv (optional)
BEEHIIV_API_KEY=
BEEHIIV_PUBLICATION_ID=

# Transactional email - Resend (optional)
RESEND_API_KEY=

# Error tracking - Sentry (optional)
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=

# Preview mode secret (optional)
PREVIEW_SECRET=preview-secret-key

# Admin setup script only (not used at runtime)
ADMIN_EMAIL=
ADMIN_PASSWORD=
